{
  "name": "raw.macro",
  "description": "Read file contents at build time, similar to webpack raw-loader",
  "version": "0.2.0",
  "main": "dist/raw.macro.js",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "keywords": [
    "webpack",
    "raw-loader",
    "raw",
    "string",
    "babel",
    "babel-macros",
    "babel-plugin-macros"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pveyes/raw.macro.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "microbundle -i src/index.js -o dist",
    "format": "prettier --write",
    "ci": "npm run test -- --ci && npm run build",
    "prepare": "npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-plugin-macros": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-tester": "^5.0.0",
    "babel-preset-env": "^1.6.1",
    "husky": "^1.0.0",
    "jest": "^22.3.0",
    "lint-staged": "^8.1.4",
    "microbundle": "^0.7.0",
    "prettier": "^1.10.2"
  },
  "jest": {
    "testRegex": "__tests__/.*.test.js$"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add -A"
    ]
  }
}
