{
  "name": "raw.macro",
  "description": "Read file contents at build time, similar to webpack raw-loader",
  "version": "0.3.1",
  "engines": {
    "node": ">=8.9.0"
  },
  "source": "src/macro.js",
  "main": "dist/raw.macro.js",
  "types": "raw.macro.d.ts",
  "license": "MIT",
  "files": [
    "dist/",
    "raw.macro.d.ts"
  ],
  "keywords": [
    "webpack",
    "raw-loader",
    "raw",
    "string",
    "babel",
    "babel-macros",
    "babel-plugin-macros"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pveyes/raw.macro.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "microbundle",
    "format": "prettier --write",
    "ci": "npm run test -- --ci && npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "babel-plugin-macros": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "babel-plugin-tester": "^9.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^7.0.0",
    "microbundle": "^0.12.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.22.1"
  },
  "jest": {
    "testRegex": "__tests__/.*.test.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick"
    }
  }
}
