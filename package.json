{
  "name": "raw.macro",
  "description": "Read file contents at build time, similar to webpack raw-loader",
  "version": "0.3.1",
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "dist/raw.macro.js",
  "types": "raw.macro.d.ts",
  "license": "MIT",
  "files": [
    "dist/",
    "raw.macro.d.ts"
  ],
  "keywords": [
    "webpack",
    "raw-loader",
    "raw",
    "string",
    "babel",
    "babel-macros",
    "babel-plugin-macros"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pveyes/raw.macro.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "microbundle -i src/index.js -o dist",
    "format": "prettier --write",
    "ci": "npm run test -- --ci && npm run build",
    "prepare": "npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-plugin-macros": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "babel-plugin-tester": "^6.0.0",
    "husky": "^2.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^7.0.0",
    "microbundle": "^0.7.0",
    "prettier": "^1.10.2"
  },
  "jest": {
    "testRegex": "__tests__/.*.test.js$"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add -A"
    ]
  }
}
